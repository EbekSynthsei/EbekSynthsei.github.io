{
  "sphereRadius": 100,
  "animationSpeed": 0.001,
  "camera": {
    "fov": 60,
    "near": 1,
    "far": 1000,
    "positionZ": 250
  },
  "controls": {
    "enableDamping": true,
    "dampingFactor": 0.05,
    "rotateSpeed": 0.5,
    "zoomSpeed": 0.7,
    "minDistanceMultiplier": 1.1,
    "maxDistanceMultiplier": 3
  },
  "label": {
    "fontSizeDesktop": "12px",
    "fontSizeMobile": "10px",
    "distanceThreshold": 200,
    "fadeStart": 100
  },
  "pointSizes": {
    "Expert": 5,
    "Advanced": 4,
    "Intermediate": 3,
    "Beginner": 2,
    "Default": 2
  },
  "sphere": {
    "segments": 32,
    "wireframeOpacity": 0.1,
    "colorLight": "#ffffff",
    "colorDark": "#333333"
  },
  "lighting": {
    "ambient": { "color": "#ffffff", "intensity": 0.5 },
    "directional": { "color": "#ffffff", "intensity": 0.8, "position": [1, 1, 1] },
    "point1": { "color": "#3357FF", "intensity": 0.5, "distance": 300, "position": [100, 100, 100] },
    "point2": { "color": "#FF5733", "intensity": 0.5, "distance": 300, "position": [-100, -100, -100] }
  },
  "line": {
    "opacity": 0.5,
    "linewidth": 1
  }
}
